{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/*": [
        "../../packages/*"
      ],
      "@/lib/*": [
        "app/lib/*"
      ],
      "@/components/*": [
        "app/components/*"
      ],
      "@/hooks/*": [
        "app/hooks/*"
      ],
      "react": [
        "./node_modules/react"
      ],
      "react-dom": [
        "./node_modules/react-dom"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
