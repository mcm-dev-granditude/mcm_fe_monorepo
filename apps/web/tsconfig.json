{
  "extends": [
    "@repo/typescript-config/nextjs.json",
  ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "isolatedModules": true,
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/lib/*": [
        "app/lib/*"
      ],
      "@/components/*": [
        "app/components/*"
      ],
      "@/hooks/*": [
        "app/hooks/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
