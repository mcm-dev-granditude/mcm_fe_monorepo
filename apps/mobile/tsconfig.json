{
  "extends": [
    "expo/tsconfig.base"
  ],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/ui": [
        "../../packages/ui/src"
      ],
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/node_modules/**"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "types/**/*.d.ts",
    "nativewind-env.d.ts",
    "expo-env.d.ts"
  ]
}
