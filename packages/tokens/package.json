{
  "name": "@repo/tokens",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./css/*": "./css/*"
  },
  "files": [
    "dist/**",
    "css/**"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build": "tsc && pnpm run copy-cli && pnpm run build:css",
    "copy-cli": "mkdir -p dist/cli && cp src/cli/generate-css-file.js dist/cli/",
    "build:css": "mkdir -p css && node ./dist/cli/generate-css-file.js"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.9",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "eslint": "^9.22.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}