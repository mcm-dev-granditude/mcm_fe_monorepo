{
  "name": "@repo/tokens",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./css/*": "./css/*"
  },
  "files": [
    "dist/**",
    "css/**"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build": "tsc && pnpm run copy-cli && pnpm run build:css",
    "copy-cli": "mkdir -p dist/cli && cp -r src/cli/*.js dist/cli/",
    "build:css": "mkdir -p css && node ./dist/cli/generate-css-file.js",
    "dev": "node ./src/cli/watch-tokens.js",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon --watch dist/ --exec 'pnpm run build:css'\""
  },
  "turbo": {
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**",
          "css/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {},
      "check-types": {}
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.9",
    "@types/react": "~18.3.12",
       "@types/react-dom": "~18.3.1",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.22.0",
    "nodemon": "^3.0.1",
    "typescript": "5.8.2"
  },
  "dependencies": {
      "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}